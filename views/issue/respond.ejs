<%-include ../partials/header%>
<%-include ../partials/menu2%>
<br><br>


	<ul class="list-group-item">
	 	<li class="list-group-item">
		  	<small><%=data.result_issue.createdAt.toString().substring(0,15)%></small>
		  	<h4><%=data.result_issue.title%></h4>
			<br>
			<%=data.result_issue.detail%>
			<br>
			<br>
			  <%if(session.userId != null){%>
			<a <%-include ../issue/modalCommand%>
			<div class="form-group">

				<form method="post" action="/issue/respond/<%=data.result_issue.id%>">
					<label class="form-control-label" for="formGroupExampleInput">Your Command</label>
					<input type="hidden" value="data.result_issue.id" name="IssueId">
				    <input type="hidden" value="data.result_issue.id" name="userId">
				    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example input" name="respond">
				  </div>
				  
				  <button type="submit" class="btn btn-primary pull-right">Submit</button>
				  
				</form>
			</div></a>
			<%}else{%>
				<div class="pull-right">
					<a href="/login">LOGIN DULU COY</a>
				</div>
			<%}%>
			<br>
			<div>		
				<a class="btn btn-default btn-sm" href="/issue/respond/<%=data.result_issue.id%>/voteup" role="button" ><span class="glyphicon glyphicon-thumbs-up"></span> Like</a>
				<a class="btn btn-default btn-sm" href="#" role="button"><span class="glyphicon glyphicon-thumbs-down"></span> Unlike</a>
			</div>
		</li>
	</ul>
	<br>
	<ul>		

		<%data.result_respond.forEach(respond=>{%>
			
			
			<div class="commentText">
			    <div class="row">
			        <div class="col-sm-8">
			            <div class="panel panel-white post panel-shadow">
			                <div class="post-heading">
			                    <div class="pull-left image">
			                        <img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image">
			                    </div>
			                    <div class="pull-left meta">
			                        <div class="title h5">
			                           <b><%=respond.User.username%></b>
			                            made a post.
			                        </div>
			                        <h6 class="text-muted time"><%=respond.createdAt.toString().substring(0,15)%></h6>
			                    </div>
			                </div> 
			                <div class="post-description">
			          
			                    <p><%=respond.respond%></p>
			                    <div class="stats">
			                        <a href="#" class="btn btn-default stat-item">
			                            <i class="fa fa-thumbs-up icon"></i>2
			                        </a>
			                        <a href="#" class="btn btn-default stat-item">
			                            <i class="fa fa-thumbs-down icon"></i>12
			                        </a>
			                    </div>
			                </div>
			            </div>
			        </div>
			    </div>
			</div>
			
		<%})%>
	</ul>
<%-include ../partials/footer%>